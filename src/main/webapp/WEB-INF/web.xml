<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>com.example.db_rgr_server.HelloServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/MyServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetGoods</servlet-name>
        <servlet-class>com.example.db_rgr_server.servlet.GetGoods</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetGoods</servlet-name>
        <url-pattern>/get_goods</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddGood</servlet-name>
        <servlet-class>com.example.db_rgr_server.servlet.AddGood</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddGood</servlet-name>
        <url-pattern>/add_good</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateGood</servlet-name>
        <servlet-class>com.example.db_rgr_server.servlet.UpdateGood</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateGood</servlet-name>
        <url-pattern>/update_good</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.example.db_rgr_server.Filter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>